{
    "name": "fetch-video-metadata",
    "version": "1.0.0",
    "description": "Tool to fetch video metadata of video files",
    "main": "src/server.js",
    "scripts": {
        "flow": "flow",
        "test": "npm run getbinaries ; jest",
        "start": "npm run getbinaries; nodemon ./src/server.js --exec babel-node",
        "getbinaries": "ffbinaries ffprobe --output=./bin",
        "build": "npm install && npm run getbinaries; babel src -d dist",
        "serve": "node dist/server.js"
    },
    "author": "Bas Kiers",
    "license": "ISC",
    "dependencies": {
        "JSONStream": "^1.3.2",
        "apollo-engine": "^1.0.1",
        "apollo-server-express": "^1.3.2",
        "bl": "^1.2.1",
        "body-parser": "^1.18.2",
        "express": "^4.16.2",
        "ffprobe": "^1.1.0",
        "graphql": "^0.13.1",
        "graphql-tools": "^2.21.0"
    },
    "devDependencies": {
        "babel-cli": "^6.24.0",
        "babel-core": "^6.26.0",
        "babel-jest": "^23.0.0-alpha.0",
        "babel-plugin-inline-import": "^2.0.6",
        "babel-plugin-transform-async-generator-functions": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-latest": "^6.24.1",
        "ffbinaries": "^1.0.8",
        "flow-bin": "^0.67.1",
        "jest": "^22.4.2",
        "nodemon": "^1.17.1",
        "regenerator-runtime": "^0.11.1"
    },
    "jest": {
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "./dist"
        ],
        "coverageReporters": [
            "lcov",
            "html"
        ]
    }
}
